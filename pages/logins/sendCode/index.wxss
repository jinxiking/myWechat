/* pages/logins/sendCode/index.wxss */
.top_content{
  color:#000;
  margin-top: 100rpx;
  display: flex;
  justify-content: center;
  font-size: 30rpx;
}
.tips{
  color:#666666;
  font-size:25rpx;
  margin-top: 50rpx;
  display: flex;
  justify-content: center;
}


.input_content{
  margin-top:100rpx;
  width: 550rpx;
  display: flex;
  justify-content: space-between;
}

.input_content input{
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-radius:3px; 
  height: 80rpx;
  width: 80rpx;
  text-align: center;
  line-height: 80rpx;
  color:#00B1A2;
  box-shadow:0px 0px 10px 0px rgba(0, 0, 0, 0.08);
}
.content{
  display: flex;
  justify-content: center;
}

.button_cont{
  display: flex;
  justify-content: center;
  margin-top: 300rpx;
}

.next_button{
  display: flex;
  height: 80rpx;
  background: #08B4A3;
  margin-top: 50rpx;
  color:#fff;
  line-height: 80rpx;
  font-size: 30rpx;
  justify-content: center;
  width: 250rpx;
  border-radius:3px;
}