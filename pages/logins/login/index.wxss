.content{
  padding-left:60rpx;
  padding-right: 60rpx;
}
.content_top{
  margin-top:60rpx;
}
.title_text{

  font-size:38rpx;
  font-family:PingFangSC-Medium;
  font-weight:500;
  color:rgba(0,0,0,1);
}

.login_content{
  margin-top: 100rpx;
  position: relative;
}

.code{
  border-bottom:1rpx solid rgba(0,0,0,0.1);
  height: 100rpx;
  lighting-color: 100rpx;
  font-size: 25rpx;
  margin-top: 50rpx;
}
.tel{
  height: 100rpx;
  lighting-color: 100rpx;
  font-size: 25rpx;
  margin-top: 50rpx;
}
.tel_c{
  border-bottom:1rpx solid rgba(0,0,0,0.1);
}


.mybutton{
  display: flex;
  height: 100rpx;
  background: #7BD3CC;
  margin-top: 50rpx;
  color:#fff;
  line-height: 100rpx;
  font-size: 38rpx;
  justify-content: center;
}

.sendCode{
  font-size: 25rpx;
  position: absolute;
  color:rgba(0,0,0,0.5);
  top:40rpx;
  right: 0;
  z-index: 110;
}

.choseBind{
  font-size: 25rpx;
  line-height: 25rpx;
  margin-top: 50rpx;
  display: flex;
  justify-content: space-between;
}

.imgs{
  width: 25rpx;
  height: 25rpx;
}

.radio_label{
  margin-left:15rpx;
  position: relative;
  top: -1rpx;
}
.radio_content{
  display: flex;
  justify-content: flex-start;
}

.tips{
  width: 100%;
  font-size: 25rpx;
  position: fixed;
  bottom: 30rpx;
  text-align: center;
  justify-content: center;
}

.canSend{
  color:#00B1A2;
}

.canSubmit{
  background: #1bb0a2!important;
}