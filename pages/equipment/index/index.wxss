/* pages/equipment/index/index.wxss */
.shopItem{
  background: #C1ECE8;
  height: 120rpx;
  border-radius:3px;  
  overflow: hidden;
  position: relative;
  margin-bottom: 30rpx;
}
.shopName{
  line-height: 120rpx;
  font-size:30rpx;
  color:#333333; 
  padding-left:20rpx;
  height: 120rpx;
}
.shop_bg{
  width: 110rpx;
  position: absolute;
  bottom:-20rpx;
  right: 35rpx;
}

.active{
  box-shadow:0px 0px 15px 0px rgba(0, 0, 0, 0.08);
  height: auto;
  background: #fff;
}
.active .shopName{
  background: #00B1A2;
  color:#fff;
}
.active .shop_bg{
  width: 200rpx;
  right: -40rpx;
  bottom: -20rpx!important;
}
.edit{
  width: 30rpx;
  position: relative;
  top:6rpx;
  margin-left: 19rpx;
}
.link{
  position: absolute;
  top:47rpx;
  right: 20rpx;
  width: 33rpx;
}
.list_item{
  display: flex;
  justify-content: space-between;
  height: 80rpx;
  line-height: 80rpx;
  color:#666666;
  padding-left:30rpx;
  padding-right: 20rpx; 
  font-size: 26rpx;
}
.row{
  width: 20rpx;
  margin-top: 25rpx;
}
.card{
  margin-top: 30rpx;
  box-shadow:0px 0px 12px 0px rgba(0, 0, 0, 0.08);
  border-radius:3px;
}

.card_title{
  font-size: 27rpx;
  line-height: 80rpx;
  padding: 0 20rpx;
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid rgba(0,0,0,0.1);
}
.more{
  color:#999999;
  font-size: 23rpx;
}
.problem{
  color:#333333;
}
.tel{
  width: 35rpx;
  margin-top: 25rpx;
}