/* background: red; width: 200px; height: 50px; display: inline-block */
.tap_item{  
  color:#333;
  width: 200rpx; 
  height: 100rpx; 
  display: inline-block;
  line-height: 100rpx;
  text-align: center;
  font-size: 28rpx;
  
}

.tab_cont{
  border-bottom: 1px solid rgba(0,0,0,0.1);
  position: fixed;
  top:0;
  width: 100%;
  background: #fff;
}

.active{
  color:#00B1A2;
  border-bottom:3px solid #00B1A2;
}

.list_content{
  padding: 30rpx;
  margin-top:100rpx;
}

.list_item{
  box-shadow:0px 0px 10px 0px rgba(0, 0, 0, 0.08);
  border-radius:3px; 
  margin-top: 30rpx;
}
.list_img{
  width: 100%;
}
.show_code{
  width: 100%;
  height: 90rpx;
}
.code_img{
  width: 26rpx;
  margin-left: 10rpx;
}
.show_code{
  display: flex;
  justify-content: center;
  align-items: center;
  color:#333333;
}

.mask{
  width: 100%;
  height: 100%;
  position: fixed;
  top:0;
  left: 0;
  z-index: 10;
  background: rgba(0,0,0,0.5);
  display: flex;
  justify-content: center;
  align-items: center;
}
.layer_content{
  border-radius: 3px;
  /* width:70%; */
  position: relative;
  display: flex;
  justify-content: center;
}

.mask_bg{
  width: 440rpx;
}

.mask_close{
  position: absolute;
  bottom:25rpx;
  text-align: center;
  color:#00B1A2;
  font-size: 31rpx;
}
.layer_code_img{
  position: absolute;
  top:50rpx;
  background: #000;
  width: 355rpx;
  height: 355rpx;
}
.codeCimg{
  width: 100%;
  height: 100%;
}