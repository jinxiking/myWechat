/* pages/home/billing/index.wxss */
page{
  position: relative;
}
.top_bg{
  background: #00B1A2;
  height: 200rpx;
  position: absolute;
  top:0;
  width: 100%;
  z-index: 9;
}
.top_card{
  height: 200rpx;
  display: flex;
  justify-content: space-between;
  
}
.card_item{
  width: 33%;
  color:#333333;
  font-size: 28rpx;
  text-align: center;
  padding-top: 50rpx;
}
.num{
  font-size: 46rpx;
  line-height: 62rpx;
}
.card{
  box-shadow:0px 0px 10px 0px rgba(0, 0, 0, 0.08);
  width: 90%;
  margin-left: 5%;
  background: #fff;
  position: relative;
  z-index: 11;
  padding-bottom: 30rpx;
}
.upTime{
  color:#999999;
  text-align: center;
  margin-top: 30rpx;
}
.bg_round{
  position: absolute;
  width: 140%;
  z-index: 10;
  top:130rpx;
  margin-left: -20%;
}
.task_detail{
  margin-top: 30rpx;
  display: flex;
  justify-content: flex-start;
  font-size: 26rpx;
}
.task_name{
  color:#999999;
  min-width: 120rpx;
}

.task_new_name{
  color:#333333;
  min-width: 120rpx;
}

.task_val{
  color:#333333;
  margin-left: 20rpx;
}
.detail_dom{
  position: relative;
  z-index: 11;
  width: 90%;
  margin-left: 5%;
}
.icon{
  width: 30rpx;
  margin-left: 10rpx;
  position: relative;
  top:5rpx;
}
.list_cont{
  padding: 30rpx;
  margin-bottom:150rpx;
}
.table_title{
  color:#999999;
  border-top:1px solid rgba(0,0,0,0.1); 
  border-bottom:1px solid rgba(0,0,0,0.1); 
  height: 60rpx;
  line-height: 60rpx;
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;

  text-align: center;
}
.table_title text{
  width: 20%;
}

.table_item{
  color:#999999;
  border-bottom:1px solid rgba(0,0,0,0.1); 
  height: 60rpx;
  line-height: 60rpx;
  display: flex;
  justify-content: space-between;
  text-align: center;
  color:#333333;
}
.table_item text{
  width: 20%;
}
.click{
  color:#00B1A2;
  text-decoration:underline;
}
.footer{
  display: flex;
  justify-content: space-between;
  position: fixed;
  bottom:0;
  border-top:1px solid rgba(0,0,0,0.3); 
  width: 100%;
  height: 150rpx;
  color:#999999;
}
.footer_text_cont{
  margin-left: 30rpx;
}
.text_line{
  line-height: 75rpx;

}
.footer_img{
  width: 100rpx;
  margin-right: 30rpx;
  margin-top:25rpx;
}