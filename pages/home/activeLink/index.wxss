/* pages/home/activeLink/index.wxss */
page{
  background: rgba(0,177,162,0.1);
}
.mask{
  width: 100%;
  height: 100%;
  position: fixed;
  top:0;
  left: 0;
  z-index: 10;
  display: flex;
  justify-content: center;
  align-items: center;
}
.layer_content{
  border-radius: 3px;
  width:98%;
  position: relative;
  display: flex;
  justify-content: center;
}

.mask_bg{
  width: 98%;
}

.mask_close{
  position: absolute;
  bottom:25rpx;
  text-align: center;
  color:#00B1A2;
  font-size: 31rpx;
}
.layer_code_img{
  background: #000;
  width: 480rpx;
  height: 480rpx;
}

.pozition_cont{
  width: 80%;
  position: absolute;
  text-overflow:ellipsis;
  word-wrap:break-word;
  color:#00B1A2;
  top:200rpx;
  text-align: center;
}
.tip_copy{
  color:#999999;
  margin-top: 50rpx;
  font-size: 25rpx;
  display: flex;
  justify-content: center;

}
.tip_copy image{
  width: 26rpx;
  margin-right:10rpx;
  position: relative;
  top:5rpx;
}
.code_cont{
  display: flex;
  justify-content: center;
  margin-top: 50rpx;
}
.title_text{
  position: absolute;
  top:60rpx;
  color:#fff;
  font-size: 30rpx;
}