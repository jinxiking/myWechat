/* pages/home/BillingDetail/index.wxss */

.detail_item{
  display: flex;
  color:#666666;
  justify-content: space-between;
  height: 90rpx;
  background: #fff;
  border-bottom:1px solid rgba(0,0,0,0.1);
  padding-left:20rpx;
  padding-right: 20rpx;
}
page{
  background: #F6F6F6;
}
.time_item{
  line-height: 90rpx;
  font-size: 24rpx;
}
.item_num{
  display: flex;
  line-height: 45rpx;
  font-size: 24rpx;
  flex-direction: column;
}

.line_tip{
  padding-left:20rpx;
  padding-right: 20rpx;
}
.line_tip{
  height: 85rpx;
  line-height: 85rpx;
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
  color: #333;
}
.item_num_bottom{
  font-size: 26rpx;
  width: 50%;
}
.item_num_bottom view{
  line-height: 90rpx;
  height: 90rpx;
  width: 100%;
  overflow: hidden;/*超出部分隐藏*/
  text-overflow:ellipsis;/* 超出部分显示省略号 */
  white-space: nowrap;/*规定段落中的文本不进行换行 */
}


