  </view>
</view>

<view class='banner_content'>
  <swiper
    indicator-dots="{{indicatorDots}}" 
    autoplay="{{autoplay}}" 
    current = "{{current}}"
    class='swiper_now'
    bindchange = 'bindchange'
    >
    <block wx:for="{{background}}" wx:key="*this">
      <swiper-item>
        <image src='../../../public/imgs/home/banner.png' class='banner_img' mode="widthFix"></image>
      </swiper-item>
    </block>
  </swiper>
  <view class='swiper_current'>
    <block wx:for="{{background}}" wx:key="*this">
      <view class="current_item {{current == index ? 'active':'' }}">

      </view>
    </block>
  </view>

</view>
<view class='line_bg'></view>

<view class='message_content'>
  <view class='mes_img_cont'>
    <image  src='../../../public/imgs/home/message.png' class='message_img' mode="widthFix"></image>
  </view>
  <view class='mess_swiper'>
      <swiper
       indicator-dots="{{indicatorDots}}" 
       autoplay="{{autoplay}}" 
       circular="{{circular}}" 
       vertical="{{vertical}}"
       interval="{{interval}}" 
       duration="{{duration}}" 
       class='swiper_now'
      >
        <block wx:for="{{background}}" wx:key="*this">
          <swiper-item class='swiperitem'>
            <view class="swiper-item {{item}}">{{item}}</view>
            <view class="swiper-item {{item}}">{{item}}</view>
          </swiper-item>
        </block>
      </swiper>
      <image  src='../../../public/imgs/home/row.png' class='row_img' mode="widthFix"></image>
  </view>
</view>

