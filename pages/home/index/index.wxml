<view class='top'>
  <view class='nav_content'>
    <image src='../../../public/imgs/home/nav_1.png' class='nav_img'></image>
    <text class='nav_text'>任务</text>
  </view>
  <view class='nav_content'>
    <image src='../../../public/imgs/home/nav_2.png' class='nav_img'></image>
    <text class='nav_text'>客流</text>
  </view>
  <view class='nav_content'>
    <image src='../../../public/imgs/home/nav_3.png' class='nav_img'></image>
