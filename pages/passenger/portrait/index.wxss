/* pages/passenger/portrait/index.wxss */
.card{
  box-shadow:0px 0px 15px 0px rgba(0, 0, 0, 0.1);
  border-radius:3px; 
  padding-bottom:60rpx; 
}
.card_title{
  height: 70rpx;
  /* background: #00B1A2; */
  color:#333333;
  line-height: 70rpx;
  font-size: 26rpx;
  padding-left:20rpx; 
  border-bottom:1px solid rgba(0, 0, 0, 0.1);
}
.bgb{
  background: #00B1A2;
  display: flex;
  justify-content: center;
  color:#fff;
}
.input_content{
  margin-top: 50rpx;
  font-size: 25rpx;
}
.input_item{
  display: flex;
  margin-top:30rpx;
  font-size: 26rpx;
}
.input_text{
  height: 50rpx;
  line-height: 50rpx;
  width: 20%;
  text-align: right;
}
.input{
  width: 80%;
  margin-left:20rpx;
  border-bottom:1px solid rgba(0,0,0,0.1); 
}

.picker{
  padding: 10rpx;
  border:1px solid rgba(0,0,0,0.1);
  margin-left: 20rpx;
  padding-right:80rpx; 
  padding-left:20rpx; 
  position: relative;
  border-radius:5rpx; 
}

.row_down{
  border-left:1px solid  rgba(0,0,0,0.1); 
  height: 100%;
  position: absolute;
  /* right: 50rpx; */
  right: 0;
  width: 50rpx;
  top:0;
  display: flex;
  justify-content: center;
  align-items: center;
}

.select_imgs{
  width: 20rpx;
}
.btn_cont{
  display: flex;
  justify-content: center;  
  margin-top: 40rpx;
}
.shadow_btn{
  background: #00B1A2;
  height: 70rpx;
  box-shadow:0px 0px 15px 0px rgba(5,179,163,0.5);
  line-height: 70rpx;
  width: 200rpx;
  border-radius:35rpx; 
  display: flex;
  justify-content: center;
  color:#fff;
}

ec-canvas {
  width: 300rpx!important;
  height: 300rpx!important;
}
.chat_content{
  width: 100%;
  height: 400rpx;
  margin-top: 30rpx;
}

.tap_item{  
  color:#333;

  height: 70rpx; 
  display: inline-block;
  line-height: 70rpx;
  text-align: center;
  font-size: 26rpx;
  
}

.tab_cont{
  border-bottom: 1px solid rgba(0,0,0,0.1);
  width: 100%;
  background: #fff;
  margin-bottom: 30rpx;
  display: flex;
  justify-content: space-around;
}

.active{
  color:#00B1A2;
  border-bottom:3px solid #00B1A2;
}

.nav_cont{
  display: flex;
  justify-content: center;
}
.navs{
  display: flex;
  justify-content: flex-start;
}
.nav{
  border-top: 1px solid rgba(0, 0, 0, 0.1);
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  padding: 10rpx 20rpx;
  border-left:1px solid  rgba(0, 0, 0, 0.1);
}
.end{
  border-right: 1px solid rgba(0, 0, 0, 0.1);
  border-top-right-radius:2px;
  border-bottom-right-radius:2px;
}
.first{
  border-top-left-radius:2px;
  border-bottom-left-radius:2px;
}

.active_nav{
  background: #00B1A2;
  color:#fff;
  border: none;
}
.type{
  display: flex;
  justify-content: center;
}
.type_cont{
  display: flex;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-radius:4px; 
  margin-bottom: 40rpx;
}
.type_cont view{
  padding: 10rpx 40rpx;
}
.borderR{
  border-right:1px solid rgba(0, 0, 0, 0.1); 
}
.shopPiker{
  border: none;
}